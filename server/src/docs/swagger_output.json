{
  "openapi": "3.0.0",
  "info": {
    "version": "v0.0.1",
    "title": "Dokumentasi API Event",
    "description": "Dokumentasi API Event"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Local server"
    },
    {
      "url": "https://ilham-event-be.vercel.app/api",
      "description": "Production server"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        }
      }
    },
    "/auth/activation": {
      "post": {
        "tags": ["Auth"],
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Activation"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "token"
      }
    },
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "emailOrUsername": {
            "type": "string",
            "example": "ilham123"
          },
          "password": {
            "type": "string",
            "example": "123"
          }
        }
      },
      "Register": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string",
            "example": "ilham123"
          },
          "username": {
            "type": "string",
            "example": "ilham123"
          },
          "email": {
            "type": "string",
            "example": "ilham123@yopmail.com"
          },
          "password": {
            "type": "string",
            "example": "123"
          },
          "confirmPassword": {
            "type": "string",
            "example": "123"
          }
        }
      },
      "Activation": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "123"
          }
        }
      }
    }
  }
}
